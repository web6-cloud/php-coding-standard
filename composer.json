{
    "name": "web6/coding-standard",
    "description": "A PHP Code_Sniffer configuration for WEB6 Cloud's coding standards.",
    "type" : "phpcodesniffer-standard",
    "keywords": [
        "web6",
        "coding-standard",
        "php",
        "web6-coding-standard"
    ],
    "homepage": "https://github.com/web6-cloud/php-coding-standard",
    "license": "MIT",
    "authors": [
        {
            "name": "WEB6 Cloud",
            "email": "hello@web6.cloud",
            "homepage": "https://web6.cloud",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0|^8.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "tightenco/tlint": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "Tighten\\TightenCodingStandard\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tighten\\TightenCodingStandard\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
